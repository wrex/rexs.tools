---
import Kanji from "../components/Kanji.svelte";
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Rex's Tools";
const description = "Let's get our hand's dirty";
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
  <div class="home-container">
    <div class="home-copy">
      <h1>Rex's Tools</h1>
      <p>
        Collected thoughts from a lifetime of collecting and using all sorts of
        woodworking and metalworking tools and machines.
      </p>
      <p>Let's get our hands dirty!</p>
      <p class="note">
        This site occasionally uses Japanese characters (kanji). Hover over any <Kanji
          romaji="kanji"
          furigana="かんじ">漢字</Kanji
        >
        characters to reveal the readings for the characters (readings are always
        visible on mobile devices). There's a toggle in the upper right to display
        the readings in Japanese (kana) or roman/alphabetic characters (romaji).
      </p>
    </div>

    <div class="hero-image-container">
      <picture>
        <source srcset="/assets/wrench.png" media="(min-width: 600px)" />
        <img
          class="hero-image"
          alt="Hand holding a wrench"
          src="/assets/wrench.png"
          width="550"
          height="466"
        />
      </picture>
    </div>
  </div>
</BaseLayout>

<style>
  .home-container {
    align-items: center;
    display: flex;
    flex: 1;
    justify-content: center;
    margin: 2em 0;
    min-height: 400px;
  }

  .home-copy {
    flex: 1;
    padding: 0 1em;
  }

  .home-copy h1 {
    font-weight: 700;
    margin-bottom: 0.5em;
    line-height: 1.3;
  }

  .home-copy p {
    font-size: 1.4em;
    line-height: 2em;
  }

  p.note {
    margin-top: 3rem;
    font-size: 0.7em;
    font-style: italic;
    color: var(--text-secondary);
  }

  .hero-image-container {
    margin: 0 1em;
    text-align: center;
  }

  .hero-image-container picture {
    display: block;
    min-height: 250px;
  }

  .caption {
    font-size: 0.8em;
    font-style: italic;
    text-align: left;
  }

  .hero-image {
    width: 100%;
    max-width: 550px;
    margin-bottom: 1em;
  }

  @media (max-width: 1200px) {
    p {
      font-size: 1.2em;
    }

    .hero-image {
      max-width: 400px;
    }
  }

  @media (max-width: 800px) {
    .home-container {
      flex-direction: column;
    }

    .home-copy {
      flex: 0;
      padding-bottom: 2em;
      text-align: center;
    }
  }
</style>
