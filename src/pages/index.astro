---
import Kanji from "../components/Kanji.svelte";
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "Rex's Tools";
const description = "Let's get our hand's dirty";
const permalink = Astro.site.href;
---

<BaseLayout
  title={title}
  description={description}
  permalink={permalink}
  current="home"
>
  <div class="grid">
    <section>
      <h1>Rex's Tools</h1>
      <p>
        Collected thoughts from a lifetime of collecting and using all sorts of
        tools and machines for wood, metal, and even plastic.
      </p>
      <blockquote>
        Man is a tool-using animal. Without tools he is nothing, with tools he
        is all.
        <footer>
          <cite>&mdash; Thomas Carlyle</cite>
        </footer>
      </blockquote>
      <p class="note">
        This site occasionally uses Japanese characters (kanji). Hover over any <Kanji
          client:load
          romaji="kanji"
          furigana="かんじ">漢字</Kanji
        >
        characters to reveal the readings for the characters (readings are always
        visible on mobile devices). There's a toggle in the upper right to display
        the readings in Japanese (あ) or roman/alphabetic characters (A).
      </p>
    </section>
    <img
      class="heroImage"
      alt="Hand holding a wrench"
      src="/assets/wrench.png"
    />
  </div>
</BaseLayout>

<style>
  .heroQuote {
    padding-block: 0;
  }
  .heroImage {
    max-height: 80%;
    padding: 1rem 4rem;
  }
  .note {
    margin-top: 5rem;
    font-style: italic;
    font-size: small;
    color: var(--secondary);
  }
</style>
