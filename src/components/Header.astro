---
import Logo from "./Logo.astro";
import Nav from "./Nav.astro";

const { current = "" } = Astro.props;
---

<style>
  header {
    display: flex;
    margin: 0 auto;
    max-width: 1400px;
    padding-inline: 2em;
    padding-top: 0.5em;
    width: 100%;
  }
</style>

<header>
  <Logo />
  <Nav current={current} />
</header>
